@model Progra_web_3_Tp_final.Models.Articulo;
@{
    ViewData["Title"] = "Editar Articulo";
}

<div class="text-center">
    <h3>Editar Articulo</h3>
    <form class="articulos-form">
        <input type="hidden" id="IdArticulo" name="IdArticulo" value="@Model.IdArticulo" />
        <div>
            <input type="text" class="form-control mb-2" id="Codigo" name="Codigo" placeholder="Código" required value="@Model.Codigo">
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" placeholder="Descripción" required value="@Model.Descripcion">
        </div>


    </form>
    <button type="button" class="btn btn-success mt-2" id="editar">Modificar</button>
    <button type="button" class="btn btn-danger mt-2" id="cancelar">Cancelar</button>

</div>
