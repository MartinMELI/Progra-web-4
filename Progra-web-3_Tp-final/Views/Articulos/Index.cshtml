@model List<Entidades.Models.Articulo>
@{
    ViewData["Title"] = "Articulos";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

<div class="text-center">
    <div class="articulos-filters mb-4">
        <input type="text" class="form-control col-lg-3" id="buscar_descripcion" onkeyup="filtro_articulo()" placeholder="Nombre Artículo">
        <input type="text" class="form-control col-lg-3" id="buscar_codigo" onkeyup="filtro_codigo()" placeholder="Código">
        <div class="form-group form-check col-lg-3">
            <label class="form-check-label col-lg-9" for="excluir_eliminados">Excluir eliminados</label>
            <input type="checkbox" class="form-check-input" id="excluir_eliminados" onclick="filtro_articulos_eliminados()">
        </div>
        <form action="../../Articulos/NuevoArticulo" method="get">
            <button type="submit" class="btn btn-success">Nuevo Artículo</button>
        </form>
    </div>
    <div>
        <table id="tabla_articulos" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Código</th>
                    <th>Ver</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var art in Model)
                {
                    <tr>
                        <td>@art.Descripcion</td>
                        <td>@art.Codigo <span class="fecha-borrado">@art.FechaBorrado</span></td>
                        <td>
                            <form action="../../Articulos/EditarArticulo/@art.IdArticulo">
                                <button class="btn btn-info">Ver</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

