@model List<Entidades.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

<div class="text-center">
    <div class="clientes-filters mb-4">
        <input type="text" class="form-control col-lg-3" id="buscar_nombre" onkeyup="filtro_nombre()" placeholder="Nombre Usuario">
        <input type="text" class="form-control col-lg-3" id="buscar_email" onkeyup="filtro_email()" placeholder="Email">
        <div class="form-group form-check col-lg-3">
            <label class="form-check-label col-lg-9" for="excluir_eliminados">Excluir eliminados</label>
            <input type="checkbox" class="form-check-input" id="excluir_eliminados" checked>

            <button type="button" class="btn btn-info">
                <a href="/Usuarios/NuevoUsuario">Nuevo Usuario</a>
            </button>
        </div>
      
    </div>

    <div>
        <table id="tabla_usuarios" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>FechaModificación</th>
                    <th>Ver</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nombre</td>
                        <td>@user.Email <span class="fecha-borrado">@user.FechaBorrado</span></td>
                        <td>@user.FechaModificacion</td>
                        <td>
                            <form action="/Usuarios/EditarUsuario/@user.IdUsuario">
                                <button class="btn btn-info">Ver</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>